<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rooms">
    <!-- Query Room List -->
    <select id="selectRoomList" parameterType="Integer" resultType="RoomsSimpleVO">
        SELECT id, title, trans_type, deposit, fee, const_type, floor, address, images, timestamp, trans_done,
               (
                   SELECT COUNT(room_id)
                   FROM favorites
                   WHERE  room_id = id
               ) AS fav_count
        FROM rooms
        LIMIT #{from}, #{count}
    </select>

    <!-- Query Room List Length -->
    <select id="selectRoomListLength" resultType="int">
        SELECT COUNT(id)
        FROM rooms
    </select>

    <!-- Query Room Detailed List -->
    <select id="selectRoom" parameterType="Integer" resultType="RoomsVO">
        SELECT *,
                (
                    SELECT COUNT(room_id)
                    FROM favorites
                    WHERE room_id = id

                ) AS fav_count
        FROM rooms
        WHERE id = #{room_id}

    </select>

</mapper>